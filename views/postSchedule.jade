extends layout

block content
  link(rel="stylesheet", type="text/css", href="/assets/css/postSchedule.css")
  .add_info.module 
    .hd 添加一条定时
    .bd 
      form(action="/postSchedule/#{postSchedule._id}/save")
        .info_item
          .label 微博内容：
          .con
            textarea(placeholder="微博内容",name='postSchedule[content]',value=postSchedule.content)
        .info_item
          .label 定时发布的时间：
          .con
            span 年：
            select#year 
            span 月：
            select#month
            span 日：
            select#day
            span 时：
            select#hour
            span 分：
            select#minute
        .info_item
          .label 添加图片：
          .con   
            input(type="file")
        .info_item
          .label
          .con
            button(type="submit") 提交
  div#bigpic(style="display:none;")
  script(src='/assets/js/postSchedule.js')
  script
    PS.init()